IF
	Global("AR9708_HIDDEN_DOOR_STATE","GLOBAL",0)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		SetGlobal("AR9708_HIDDEN_DOOR_STATE","GLOBAL",1)
END

IF
	!Global("AR9708_HIDDEN_DOOR_STATE","GLOBAL",0)
	OpenState(Myself,FALSE)
THEN
	RESPONSE #100
		SetGlobal("AR9708_HIDDEN_DOOR_STATE","GLOBAL",0)
END

