IF
	Global("WEST_BLOCK","GLOBAL",0)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		SetGlobal("WEST_BLOCK","GLOBAL",1)
END

IF
	!Global("WEST_BLOCK","GLOBAL",0)
	OpenState(Myself,FALSE)
THEN
	RESPONSE #100
		Unlock(Myself)
		OpenDoor(Myself)
		Lock(Myself)
END

IF
	!Global("WEST_BLOCK","GLOBAL",0)
	OpenState(Myself,TRUE)
THEN
	RESPONSE #100
		Lock(Myself)
		Deactivate(Myself)
END

